<script type="text/javascript">
function espresso() 
{
	alert ('got espresso');
	for(var x=0; x < 1; x++) 
	{
	  var hash_key = 'espresso';
		var temp = window.localStorage.getItem(hash_key);
		temp = temp * 1 + 1;
		window.localStorage.setItem(hash_key, temp);
	}
